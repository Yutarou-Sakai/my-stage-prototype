%table.table
  %thead
    %tr
      %th No.
      %th Title
      %th Description
      %th{:colspan => "3"}
  %tbody
    - lessons.each_with_index do |lesson, num|
      %tr
        %td
          Lesson #{num += 1}
        %td
          = lesson.title
        %td
          = lesson.content

        %td= link_to 'Show', course_lesson_path(course, lesson), class: 'btn btn-outline-info btn-sm'
        %td= link_to 'Edit', edit_course_lesson_path(lesson), class: 'btn btn-outline-success btn-sm'
        %td= link_to 'Destroy', course_lesson_path(lesson), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm'