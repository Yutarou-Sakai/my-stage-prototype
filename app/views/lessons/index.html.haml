- content_for :title do
  web-stage
  \|
  All lessons

%h1 Lessons
%table.table.mb-5
  %thead
    %tr
      %th Title
      %th Content
      %th Course
      %th{:colspan => "3"}
  %tbody
    - @lessons.each do |lesson|
      %tr
        %td
          = lesson.title
        %td
          = lesson.content
        %td
          = lesson.course.title
        %td= link_to 'Show', lesson, class: 'btn btn-outline-info btn-sm'
        %td= link_to 'Edit', edit_lesson_path(lesson), class: 'btn btn-outline-success btn-sm'
        %td= link_to 'Destroy', lesson, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm'
