.card 
  .card-header
    .fa.fa-user
    = user.email
  .card-header
    Signed up
    = time_ago_in_words(user.created_at)
    ago
  .card-body
    %p #{"sign_in_count".humanize}：#{user.sign_in_count}
    %p #{"current_sign_in_at".humanize}：#{user.current_sign_in_at}
    %p #{"last_sign_in_at".humanize}：#{user.last_sign_in_at}
    %p #{"current_sign_in_ip".humanize}：#{user.current_sign_in_ip}
    %p #{"last_sign_in_ip".humanize}：#{user.last_sign_in_ip}
  .card-footer 
    - user.roles.each do |role|
      .badge.badge-info
        = role.name
    %p.my-2
      = link_to 'Edit roles', edit_user_path(user), class: 'btn btn-sm btn-outline-warning'
