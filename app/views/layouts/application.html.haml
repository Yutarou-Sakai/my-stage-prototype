!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Myapp
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container
        = link_to root_path, class: 'navbar-brand' do
          my-stage
        %button.navbar-toggler{"aria-controls" => "navbarNav", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarNav", "data-toggle" => "collapse", type: "button"}
          %span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse.d-flex.justify-content-between
          %ul.navbar-nav
            %li.nav-item.active
              = link_to courses_path, class: 'nav-link' do
                コース一覧
                %span.sr-only (current)
            %li.nav-item
              = link_to courses_path, class: 'nav-link' do
                Features
            %li.nav-item
              = link_to courses_path, class: 'nav-link' do
                Pricing
          .login-btn
            - if user_signed_in?
              = link_to 'logout', destroy_user_session_path, data: { method: 'delete' }, class: 'btn btn-outline-light btn-sm mx-1'
            - else
              = link_to 'sign up', new_user_registration_path, class: 'btn btn-outline-light btn-sm mx-1'
              = link_to 'login', new_user_session_path, class: 'btn btn-outline-light btn-sm mx-1'

    .container.mt-5
      %p.notice= notice
      %p.alert= alert
      = yield
